{% comment %}
  button_label: button text
  button_link: link if button have link
  button_style: style of button
  custom_class: custom class
{% endcomment %}

{%- if button_label != blank -%}
  <a
    {% if button_link == blank %}
      role="link" aria-disabled="true"
    {% else %}
      href="{{ button_link }}"
    {% endif %}
    class="button {{ custom_class }}  button--{{button_style }}"
    {{ block.shopify_attributes }}
  >
    {{ button_label | escape }}
  </a>
{%- endif -%}
